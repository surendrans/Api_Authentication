<h2 >Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => "user_form"}) do |f| %>
  <%= devise_error_messages! %>

  <p><%= f.label :email %>
  <%= f.email_field :email %></p>

  <p><%= f.label :password %>
  <%= f.password_field :password %></p>

  <p><%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %></p>

  <p style="padding-left: 480px"><%= f.submit "Sign up", :class => "large_button" %></p>
<% end %>

<%#= render :partial => "devise/shared/links" %>
