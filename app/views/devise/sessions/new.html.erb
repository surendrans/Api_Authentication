<h2>Sign in</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "user_form"}) do |f| %>
  <p><%= f.label :email %>
    <%= f.email_field :email %></p>

  <p><%= f.label :password %>
    <%= f.password_field :password %></p>

  <% if devise_mapping.rememberable? -%>
    <p><%= f.check_box :remember_me %> <%= f.label :remember_me %></p>
  <% end -%>

  <p style="padding-left: 480px"><%= f.submit "Sign in", :class => "large_button" %></p>
<% end %>

